#include <iostream>
#include <string>

// 函数：将时间字符串转换为秒数
double convertTimeToSeconds(const std::string& timeStr) {
    int hours, minutes, seconds;
    double totalSeconds;
    double fractionalSeconds;

    // 解析小时、分钟和秒
    sscanf(timeStr.c_str(), "%2d:%2d:%2d.%lf", &hours, &minutes, &seconds, &fractionalSeconds);

    // 计算总秒数
    totalSeconds = hours * 3600 + minutes * 60 + seconds + fractionalSeconds;

    return totalSeconds;
}

int main() {
    std::string timeStr = "00:00:01.567";
    double seconds = convertTimeToSeconds(timeStr);

    std::cout << "The time in seconds is: " << seconds << std::endl;

    return 0;
}
