import tkinter as tk

def get_and_set_value(entry, label):
    # 获取Entry控件的值
    value = entry.get()
    label.config(text=f"你输入的值是: {value}")
    # 设置Entry控件的值
    entry.delete(0, tk.END)
    entry.insert(0, "新值")

root = tk.Tk()

entry1 = tk.Entry(root)
entry1.pack()

label = tk.Label(root, text="")
label.pack()

button = tk.Button(root, text="获取并设置值", command=lambda: get_and_set_value(entry1, label))
button.pack()

root.mainloop()
