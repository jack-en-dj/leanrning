#include <iostream>
#include <sstream>
#include <iomanip>

double convertTimeToSeconds(const std::string& timeStr) {
    std::istringstream ss(timeStr);
    int hours, minutes, seconds;
    std::string millisecondsStr;
    char colon; // 用于读取冒号字符

    // 读取小时、分钟、秒和毫秒
    ss >> std::setw(2) >> hours >> colon >> std::setw(2) >> minutes >> colon >> std::setw(2) >> seconds >> millisecondsStr;

    // 将毫秒字符串转换为小数
    double milliseconds = std::stod(millisecondsStr) / 1000.0;

    // 计算总秒数
    double totalSeconds = hours * 3600 + minutes * 60 + seconds + milliseconds;

    return totalSeconds;
}

int main() {
    std::string timeStr = "00:00:01.567";
    double seconds = convertTimeToSeconds(timeStr);

    std::cout << "The time in seconds is: " << seconds << std::endl;

    return 0;
}
